<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@drawable/background"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".Activity.TP.TripPassGeneration">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:backgroundTint="@color/primary"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/BackButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/go_back"
                android:padding="10dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/Heading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:fontFamily="@font/balooregular"
                android:text="@string/mumbai_metro_one"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/metro_logo_small_2"
                android:drawablePadding="20dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

<TextView
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:includeFontPadding="false"
    android:textColor="@color/white"
    android:layout_marginVertical="10dp"
    android:text="@string/trip_pass"
    android:textSize="30sp"
    android:textStyle="bold"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="18sp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/orangestrip" />

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_light"
    app:cardCornerRadius="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_order"
                android:contentDescription="@string/order_image" />

            <!--SOURCE-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/SourceLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/source"
                app:startIconDrawable="@drawable/train">

                <AutoCompleteTextView
                    android:id="@+id/Source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--DESTINATION-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/DestinationLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/destination"
                app:startIconDrawable="@drawable/train">

                <AutoCompleteTextView
                    android:id="@+id/Destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--DETAILS-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TotalFare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:text="@string/_0"
                    android:layout_gravity="center"
                    android:gravity="center" />

                <ProgressBar
                    android:id="@+id/OrderProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!--PROGRESS BAR-->
            <ProgressBar
                android:id="@+id/MobileQrProgressBar"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/OrderButton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/proceed_to_pay"
                app:cornerRadius="50dp" />

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>

</LinearLayout>