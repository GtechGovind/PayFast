<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/PriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="price label"
        android:text="Ticket Price:"
        android:textAlignment="viewStart"
        android:textColor="@color/font_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ProcessingFeeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Processing Fee:"
        android:textColor="@color/font_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PriceLabel" />

    <TextView
        android:id="@+id/RefundAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Refund Amount:"
        android:paddingBottom="10dp"
        android:textColor="@color/font_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProcessingFeeLabel" />

    <TextView
        android:id="@+id/RFPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:paddingEnd="5dp"
        android:text="₹30"
        android:textColor="@color/font_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/PriceLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RFProcessingFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:paddingEnd="5dp"
        android:text="₹3"
        android:textColor="@color/font_dark"
        android:textSize="16sp"
        android:typeface="sans"
        app:layout_constraintStart_toEndOf="@+id/ProcessingFeeLabel"
        app:layout_constraintTop_toBottomOf="@+id/RFPrice" />

    <TextView
        android:id="@+id/RFRefundAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:text="₹27"
        android:textColor="@color/font_dark"
        android:textSize="16sp"
        android:typeface="sans"
        app:layout_constraintStart_toEndOf="@+id/RefundAmountLabel"
        app:layout_constraintTop_toBottomOf="@+id/RFProcessingFee" />
</androidx.constraintlayout.widget.ConstraintLayout>