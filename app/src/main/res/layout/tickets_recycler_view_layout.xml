<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/TicketCard"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:padding="7dp"
        android:elevation="3dp"
        app:cardCornerRadius="7dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="110dp"
                android:layout_gravity="start"
                android:background="#FFFFFF"
                android:backgroundTint="@color/primary"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ArrowSingleJourney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_baseline_arrow_right"
                app:layout_constraintEnd_toStartOf="@+id/DestinationStation"
                app:layout_constraintHorizontal_bias="0.562"
                app:layout_constraintStart_toEndOf="@+id/SourceStation"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ArrowReturnJourney"
                android:layout_width="41dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_compare_arrows"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/DestinationStation"
                app:layout_constraintHorizontal_bias="0.605"
                app:layout_constraintStart_toEndOf="@+id/SourceStation"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/SourceStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/source"
                android:textColor="@color/font_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/DestinationStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/destination"
                android:textColor="@color/font_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TicketFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="42dp"
                android:text="â‚¹30"
                android:textColor="@color/font_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SourceStation"
                app:layout_constraintVertical_bias="0.666" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_person_inverted"
                app:layout_constraintEnd_toStartOf="@+id/PassengerCount"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/JourneyType"
                app:layout_constraintTop_toBottomOf="@+id/DestinationStation" />

            <TextView
                android:id="@+id/JourneyType"
                android:layout_width="133dp"
                android:layout_height="19dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="47dp"
                android:layout_marginBottom="42dp"
                android:text="@string/single_journey_ticket"
                android:textColor="@color/font_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/PassengerCount"
                app:layout_constraintHorizontal_bias="0.253"
                app:layout_constraintStart_toEndOf="@+id/TicketFare"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/PassengerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="32dp"
                android:text="3"
                android:textColor="@color/font_dark"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/DestinationStation"
                app:layout_constraintVertical_bias="0.777" />

            <TextView
                android:id="@+id/TicketExpiryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Valid till 29/02/2022"
                android:textColor="@color/font_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/JourneyType"
                app:layout_constraintVertical_bias="0.333" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>